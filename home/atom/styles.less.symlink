@font-face {
  font-family: "Operator Mono";
  font-style: normal;
  font-weight: normal;
  src: local("OperatorMono-Book");
}

@font-face {
  font-family: "Operator Mono";
  font-style: normal;
  font-weight: bold;
  src: local("OperatorMono-Bold");
}

@font-face {
  font-family: "Operator Mono";
  font-style: italic;
  font-weight: normal;
  src: local("OperatorMono-LightItalic")
}

.editor:not(.mini) {
  font-family: "Operator Mono";
  font-size: 16px;
}

.editor .comment,
.editor .syntax--comment,
.entity.other.attribute-name,
.syntax--attribute-name,
.syntax--control,
.syntax--keyword {
  font-style: italic;
}

.syntax--html.syntax--id {
  color: inherit;
}

.syntax--md.syntax--uri {
  font-style: italic;
}